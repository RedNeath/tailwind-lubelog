    function showFullSizeDialog() {
        let dialog = document.getElementById("fullSizeDialog");

        if (dialog !== null) {
            dialog.showModal();
        }
    }

    function hideFullSizeDialog() {
        let dialog = document.getElementById("fullSizeDialog");

        if (dialog !== null) {
            dialog.close();
        }
    }


    function showSimpleDialog() {
        let dialog = document.getElementById("simpleDialog");

        if (dialog !== null) {
            dialog.showModal();
        }
    }

    function hideSimpleDialog() {
        let dialog = document.getElementById("simpleDialog");
        let message = document.getElementById("simpleDialogValidationMessage");

        if (dialog !== null) {
            dialog.close();
        }

        if (message !== null) {
            message.classList.add("hidden");
        }
    }

    function displayValidationMessage() {
        let message = document.getElementById("simpleDialogValidationMessage");

        if (message !== null) {
            message.classList.remove("hidden");
        }
    }
</script>
