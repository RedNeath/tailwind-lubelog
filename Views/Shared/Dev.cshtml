@{
    Random randomiser = new Random();
    ViewData["Title"] = "Dev prefabs";

    // List
    var list = new List<Dictionary<string, dynamic>>();
    for(int i = 0; i < 22; i++) {
        var item = new Dictionary<string, dynamic>();
        item.Add("col1", randomString());
        item.Add("col2", randomiser.Next(0, 99));
        item.Add("col3", new DateTime((long)randomiser.Next(0, int.MaxValue)));
        list.Add(item);
    }

    string randomString() {
        string randomString = "";

        for (int i = 0; i < 8; i++) {
            randomString += Convert.ToChar(randomiser.Next(0, 26) + 65);
        }

        return randomString;
    }
}
