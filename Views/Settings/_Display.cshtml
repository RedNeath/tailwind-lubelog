@using System.Text.Json
@using CarCareTracker.Helper
@model SettingsViewModel
@inject ITranslationHelper translator
@{
    var userLanguage = Model.UserConfig.UserLanguage;
    var currentSettings = JsonSerializer.Serialize(Model.UserConfig);
}

<div class="flex sm:hidden items-center justify-between mt-8">
    <h2 class="text-2xl font-bold tracking-tight text-gray-900 dark:text-white">@translator.Translate(userLanguage, "Display")</h2>
</div>
<hr class="sm:hidden border-gray-200 dark:border-gray-800 mt-4"/>

<div class="mt-4 sm:mt-8 bg-white dark:bg-gray-800 shadow-md p-4 md:p-6 space-y-12 border border-1 border-gray-300 dark:border-gray-700 rounded-lg">
    <div class="border-b border-gray-300 dark:border-white/10 pb-12">
        <h2 class="text-base/7 font-semibold">@translator.Translate(userLanguage, "Theme")</h2>
        <p class="mt-1 text-sm/6 text-gray-500 dark:text-gray-400">@translator.Translate(userLanguage, "Now choose your team! Ahem, I meant choose your theme... (this option needs a fix)")</p>
        
        <fieldset class="mt-6 space-y-6">
            <div class="flex gap-3 items-center">
                <div class="flex h-6 shrink-0 items-center">
                    <div class="group grid size-4 grid-cols-1">
                        <input type="checkbox" onChange="updateDisplaySettings('@currentSettings')" checked="@Model.UserConfig.UseDarkMode" id="enableDarkMode" class="col-start-1 row-start-1 appearance-none rounded border transition-all duration-100 ease-out border-gray-300 bg-white dark:bg-gray-800 checked:border-blue-600 dark:checked:border-blue-600 checked:bg-blue-600 dark:checked:bg-blue-500 indeterminate:border-blue-600 dark:indeterminate:border-blue-500 indeterminate:bg-blue-600 dark:indeterminate:bg-blue-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 dark:focus-visible:outline-blue-500 dark:border-gray-600">
                        <heroicon kind="Micro" name="Check" class="pointer-events-none col-start-1 row-start-1 s-3.5 self-center justify-self-center" fill="none"/>
                    </div>
                </div>
                <label for="enableDarkMode" class="text-sm/6 font-medium">@translator.Translate(userLanguage, "Dark Mode")</label>
            </div>
            <div class="flex gap-3 items-center">
                <div class="flex h-6 shrink-0 items-center">
                    <div class="group grid size-4 grid-cols-1">
                        <input type="checkbox" onChange="updateDisplaySettings('@currentSettings')" checked="@Model.UserConfig.UseSystemColorMode" id="useSystemColorMode" class="col-start-1 row-start-1 appearance-none rounded border transition-all duration-100 ease-out border-gray-300 bg-white dark:bg-gray-800 checked:border-blue-600 dark:checked:border-blue-600 checked:bg-blue-600 dark:checked:bg-blue-500 indeterminate:border-blue-600 dark:indeterminate:border-blue-500 indeterminate:bg-blue-600 dark:indeterminate:bg-blue-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 dark:focus-visible:outline-blue-500 dark:border-gray-600">
                        <heroicon kind="Micro" name="Check" class="pointer-events-none col-start-1 row-start-1 s-3.5 self-center justify-self-center" fill="none"/>
                    </div>
                </div>
                <label for="useSystemColorMode" class="text-sm/6 font-medium">@translator.Translate(userLanguage, "Adaptive Color Mode")</label>
            </div>
        </fieldset>
    </div>
    <div>
        <h2 class="text-base/7 font-semibold">@translator.Translate(userLanguage, "Data")</h2>
        <p class="mt-1 text-sm/6 text-gray-500 dark:text-gray-400">@translator.Translate(userLanguage, "And here's to place to change every way to display data.")</p>
        
        <fieldset class="mt-6 space-y-6">
            <div class="flex gap-3 items-center">
                <div class="flex h-6 shrink-0 items-center">
                    <div class="group grid size-4 grid-cols-1">
                        <input type="checkbox" onChange="updateDisplaySettings('@currentSettings')" checked="@Model.UserConfig.HideZero" id="hideZero" class="col-start-1 row-start-1 appearance-none rounded border transition-all duration-100 ease-out border-gray-300 bg-white dark:bg-gray-800 checked:border-blue-600 dark:checked:border-blue-600 checked:bg-blue-600 dark:checked:bg-blue-500 indeterminate:border-blue-600 dark:indeterminate:border-blue-500 indeterminate:bg-blue-600 dark:indeterminate:bg-blue-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 dark:focus-visible:outline-blue-500 dark:border-gray-600">
                        <heroicon kind="Micro" name="Check" class="pointer-events-none col-start-1 row-start-1 s-3.5 self-center justify-self-center" fill="none"/>
                    </div>
                </div>
                <label for="hideZero" class="text-sm/6 font-medium">@translator.Translate(userLanguage, "Replace $0.00 Costs with ---")</label>
            </div>
            <div class="flex gap-3 items-center">
                <div class="flex h-6 shrink-0 items-center">
                    <div class="group grid size-4 grid-cols-1">
                        <input type="checkbox" onChange="updateDisplaySettings('@currentSettings')" checked="@Model.UserConfig.UseMarkDownOnSavedNotes" id="useMarkDownOnSavedNotes" class="col-start-1 row-start-1 appearance-none rounded border transition-all duration-100 ease-out border-gray-300 bg-white dark:bg-gray-800 checked:border-blue-600 dark:checked:border-blue-600 checked:bg-blue-600 dark:checked:bg-blue-500 indeterminate:border-blue-600 dark:indeterminate:border-blue-500 indeterminate:bg-blue-600 dark:indeterminate:bg-blue-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 dark:focus-visible:outline-blue-500 dark:border-gray-600">
                        <heroicon kind="Micro" name="Check" class="pointer-events-none col-start-1 row-start-1 s-3.5 self-center justify-self-center" fill="none"/>
                    </div>
                </div>
                <label for="useMarkDownOnSavedNotes" class="text-sm/6 font-medium">@translator.Translate(userLanguage, "Display Saved Notes in Markdown")</label>
            </div>
            <div class="flex gap-3 items-center">
                <div class="flex h-6 shrink-0 items-center">
                    <div class="group grid size-4 grid-cols-1">
                        <input type="checkbox" onChange="updateDisplaySettings('@currentSettings')" checked="@Model.UserConfig.ShowVehicleThumbnail" id="showVehicleThumbnail" class="col-start-1 row-start-1 appearance-none rounded border transition-all duration-100 ease-out border-gray-300 bg-white dark:bg-gray-800 checked:border-blue-600 dark:checked:border-blue-600 checked:bg-blue-600 dark:checked:bg-blue-500 indeterminate:border-blue-600 dark:indeterminate:border-blue-500 indeterminate:bg-blue-600 dark:indeterminate:bg-blue-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 dark:focus-visible:outline-blue-500 dark:border-gray-600">
                        <heroicon kind="Micro" name="Check" class="pointer-events-none col-start-1 row-start-1 s-3.5 self-center justify-self-center" fill="none"/>
                    </div>
                </div>
                <label for="showVehicleThumbnail" class="text-sm/6 font-medium">@translator.Translate(userLanguage, "Show Vehicle Thumbnail in Header")</label>
            </div>
            <div class="flex gap-3 items-center">
                <div class="flex h-6 shrink-0 items-center">
                    <div class="group grid size-4 grid-cols-1">
                        <input type="checkbox" onChange="updateDisplaySettings('@currentSettings')" checked="@Model.UserConfig.EnableExtraFieldColumns" id="enableExtraFieldColumns" class="col-start-1 row-start-1 appearance-none rounded border transition-all duration-100 ease-out border-gray-300 bg-white dark:bg-gray-800 checked:border-blue-600 dark:checked:border-blue-600 checked:bg-blue-600 dark:checked:bg-blue-500 indeterminate:border-blue-600 dark:indeterminate:border-blue-500 indeterminate:bg-blue-600 dark:indeterminate:bg-blue-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 dark:focus-visible:outline-blue-500 dark:border-gray-600">
                        <heroicon kind="Micro" name="Check" class="pointer-events-none col-start-1 row-start-1 s-3.5 self-center justify-self-center" fill="none"/>
                    </div>
                </div>
                <label for="enableExtraFieldColumns" class="text-sm/6 font-medium">@translator.Translate(userLanguage, "Show Extra Field Columns")</label>
            </div>
            <div class="flex gap-3 items-center">
                <div class="flex h-6 shrink-0 items-center">
                    <div class="group grid size-4 grid-cols-1">
                        <input type="checkbox" onChange="updateDisplaySettings('@currentSettings')" checked="@Model.UserConfig.HideSoldVehicles" id="hideSoldVehicles" class="col-start-1 row-start-1 appearance-none rounded border transition-all duration-100 ease-out border-gray-300 bg-white dark:bg-gray-800 checked:border-blue-600 dark:checked:border-blue-600 checked:bg-blue-600 dark:checked:bg-blue-500 indeterminate:border-blue-600 dark:indeterminate:border-blue-500 indeterminate:bg-blue-600 dark:indeterminate:bg-blue-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 dark:focus-visible:outline-blue-500 dark:border-gray-600">
                        <heroicon kind="Micro" name="Check" class="pointer-events-none col-start-1 row-start-1 s-3.5 self-center justify-self-center" fill="none"/>
                    </div>
                </div>
                <label for="hideSoldVehicles" class="text-sm/6 font-medium">@translator.Translate(userLanguage, "Hide Sold Vehicles")</label>
            </div>
        </fieldset>
    </div>
</div>
