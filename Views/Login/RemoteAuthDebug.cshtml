@model List<OperationResponse>
@{
    ViewData["Title"] = "Remote Auth Debug";
}
<div class="flex flex-1 min-h-screen">
    <div class="flex flex-1 flex-col justify-center px-4 py-12 mx-auto sm:px-6 lg:flex-none lg:px-20 xl:px-24">
        <div class="mx-auto w-full max-w-96 lg:w-96">
            <div class="flow-root">
                <ul class="-mb-8" role="list">
                    @foreach (OperationResponse result in Model)
                    {
                        <li>
                            <div class="relative pb-8">
                                @if (Model.Last() != result)
                                {
                                    <span class="absolute top-4 left-4 ml-[-1px] h-full w-0.5 bg-gray-200 dark:bg-white/10"></span>
                                }
                                <div class="relative flex gap-x-3">
                                    <div>
                                        <span class="flex size-8 items-center justify-center rounded-full @(result.Success ? "bg-green-500" : "bg-red-500") shadow-sm ring-8 ring-white dark:ring-gray-900">
                                            @if (result.Success)
                                            {
                                                <heroicon kind="Mini" name="Check" class="size-5 text-white" />
                                            }
                                            else
                                            {
                                                <heroicon kind="Mini" name="XMark" class="size-5 text-white" />
                                            }
                                        </span>
                                    </div>
                                    <div class="pt-1.5">
                                        <p class="text-sm text-gray-500 dark:text-gray-400">
                                            @result.Message
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

    